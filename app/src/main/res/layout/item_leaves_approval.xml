<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/leave_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="adfsljsdljfljdfs"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/leave_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_below="@+id/leave_text"
            android:text="adfsljsdljfljdfs"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/no_of_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_below="@+id/leave_text"
            android:layout_toEndOf="@+id/leave_type_text"
            android:text="adfsljsdljfljdfs"
            android:textStyle="bold">

        </TextView>

        <Button
            android:id="@+id/approve_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_type_text"
            android:text="Approve">

        </Button>

        <Button
            android:id="@+id/reject_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_type_text"
            android:layout_toRightOf="@+id/approve_button"
            android:text="Reject">

        </Button>
    </RelativeLayout>
</androidx.cardview.widget.CardView>